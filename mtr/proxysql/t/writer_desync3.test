# scheduler: active_failover=1 retry_down=2 writer_is_also_reader=1 failBack=false
#
# Scenario:
# 1. node_1: SET global wsrep_desync=1
#     => node_1 writer: state does not change to SOFT_OFFLINE as it is the only writer
#     => node_1 reader: state  change to SOFT_OFFLINE
# 2. node_1: SET global wsrep_desync=0
#     => node_1 reader: state changes to ONLINE.

--let $proxysql_scheduler_config = writer_is_reader_2w.toml
--let $action_1_node = node_1
--let $action_1 = SET global wsrep_desync=1;
--let $action_2_node = node_1
--let $action_2 = SET global wsrep_desync=0;
--source 2w3r2bw_2actions.inc
